<!DOCTYPE html>
<html lang="en">
<%- include('../partials/_head') %>
    <link rel="stylesheet" href="/styles/userprofile.css">

    <body>
        <%- include('../partials/_navbar',{routes}) %>
            <div class="user__info__container">
                <div class="bio__name__avatar"></div>
                <div> <img class="avatar__image" src="<%= userProfile.avatar %>" alt="" srcset=""></div>

                <div class="name__bio">
                    <div> <%= userProfile.username %>
                    </div>
                    <div> "<%= userProfile.biography %>"
                    </div>
                </div>
            </div>
            <div class="profile__links">
                <a href="./">
                    <div class="profile__link">
                        <%= userProfile.username %>'s Movie Posts
                    </div>
                </a>
                <a href="./favorites">
                    <div class="profile__link">
                        <%= userProfile.username %>'s Favorites
                    </div>
                </a>
            </div>
            </div>
            <main class="container__gallery">
                <div class="columns">
                    <% for(let idx=0; idx < posts.length; idx++){ %>
                        <% const post=posts[idx] %>
                            <div class="column">
                                <!-- <article class=> -->

                                <div class="example-2 card">
                                    <div class="wrapper" style="background-image: url('<%= post.image %>');">

                                        <div class="header">
                                            <ul class="menu-content">
                                                <li>
                                                    <a href="#" class="fa fa-bookmark-o"></a>
                                                </li>
                                                <li><a href="#" class="fa fa-heart-o"><span>
                                                            <!-- %=likes[idx].numLikes% -->
                                                        </span></a></li>
                                                <li><a href="#" class="fa fa-comment-o"><span>
                                                            <%=post.numComments%>
                                                        </span></a></li>
                                            </ul>
                                        </div>
                                        <div class="data">
                                            <div class="content">
                                                <span class="author">
                                                    <%= post.user.username %>
                                                </span>
                                                <h1 class="title"><a href="/gallery/<%= post.id %>">
                                                        <%= post.title %>
                                                    </a></h1>
                                                <p class="text">
                                                    <%= post.description %>
                                                        COMMENTS <%=post.numComments%>
                                                </p>
                                                <a href="/gallery/<%= post.id %>" class="button">Read more</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- example end -->
                                <!-- </article> -->
                            </div>
                            <% } %>

            </main>
    </body>

</html>