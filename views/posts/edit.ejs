<!DOCTYPE html>
<html lang="en">
<%- include('../partials/_head') %>
    <link rel="stylesheet" href="/styles/form.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="form__container">
                <h1 class="form__name">Edit Post</h1>
                <form action="/gallery/<%= post.id %>?_method=PUT" method="POST" id="form__box">
                    <% if (typeof error !=='undefined' ) { %>
                        <article class="message is-danger">
                            <div class="message-header">
                                <p>Danger</p>
                            </div>
                            <div class="message-body">
                                <%= error.message %>
                            </div>
                        </article>
                        <% } %>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Post title" name="title"
                                    value="<%= post.title %>">
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="URL" name="image"
                                    value="<%= post.image %>" required>
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Description" name="description"
                                    value="<%= post.description%> ">
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Tags" name="tags"
                                    value="<%= post.tags%> ">
                            </div>
                            <div>
                                <button class="button ">Submit Updated Post</button>
                            </div>
                </form>
            </div>
    </body>

</html>