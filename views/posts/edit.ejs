<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/gallery/<%= post.id %>?_method=PUT" method="POST">
        <% if (typeof error !=='undefined' ) { %>
            <article class="message is-danger">
                <div class="message-header">
                    <p>Danger</p>
                </div>
                <div class="message-body">
                    <%= error.message %>
                </div>
            </article>
            <% } %>
                <div class="new__post__title">
                    <input type="text" class="input" placeholder="Post title" name="title" value="<%= post.title %>" >
                </div>
                <div class="new__post__image">
                    <input type="text" class="input" placeholder="URL" name="image" value="<%= post.image %>">
                </div>
                <div class="new__post__description">
                    <input type="text" class="input" placeholder="Description" name="description" value="<%= post.description%> ">
                </div>
                <div>
                    <button class="button ">Submit Updated Post</button>
                </div>
    </form>
</body>
</html>