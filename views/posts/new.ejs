<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>
<link rel="stylesheet" href="/styles/form.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="form__container">
                <h1 class="form__name">New Post</h1>
                <form action="/gallery" method="POST" id="form__box">
                    <% if (typeof error !=='undefined' ) { %>
                        <article class="message is-danger">
                            <div class="message-header">
                                <p>Danger</p>
                            </div>
                            <div class="message-body">
                                <%= error.message %>
                            </div>
                        </article>
                        <% } %>
                            <div class="form__input">
                                <label for="title">Post Title</label><br/>
                                <input maxlength="30" type="text" class="input" placeholder="Post title" name="title" id="title">
                            </div>
                            <div class="form__input">
                                <label for="image">Image Link</label><br/>
                                <input type="text" class="input" placeholder="Image URL" name="image" id="image">
                            </div>
                            <div class="form__input">
                                <label for="description">Post Description</label><br/>
                                <input maxlength="300" type="text" class="input" placeholder="Description" name="description" id="description">  
                            </div>
                            <div class="form__input">
                                <label for="Tags">Tags</label><br/>
                                <input type="text" class="input" placeholder="Tags" name="tags" id="tags">
                            </div>
                            <div>
                                <button class="form__button">Submit New Post</button>
                            </div>

                </form>
            </div>


    </body>

</html>