<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/_head') %> 

<body>
    <%- include('../partials/_navbar') %> 
    <form action="/gallery" method="POST">
        <% if (typeof error !=='undefined' ) { %>
            <article class="message is-danger">
                <div class="message-header">
                    <p>Danger</p>
                </div>
                <div class="message-body">
                    <%= error.message %>
                </div>
            </article>
            <% } %>
                <div class="new__post__title">
                    <input type="text" class="input" placeholder="Post title" name="title" >
                </div>
                <div class="new__post__image">
                    <input type="text" class="input" placeholder="URL" name="image" >
                </div>
                <div class="new__post__description">
                    <input type="text" class="input" placeholder="Description" name="description" >
                </div>
                <div class="new__post__tags">
                    <input type="text" class="input" placeholder="Tags" name="tags" >
                </div>
                <div>
                    <button class="button ">Submit New Post</button>
                </div>
    </form>


</body>

</html>