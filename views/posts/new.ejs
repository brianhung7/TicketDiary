<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>
<link rel="stylesheet" href="/styles/form.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="form__container">
                <h1 class="form__name">New Post</h1>
                <form action="/gallery" method="POST" id="form__box">
                    <% if (typeof error !=='undefined' ) { %>
                        <article class="message is-danger">
                            <div class="message-header">
                                <p>Danger</p>
                            </div>
                            <div class="message-body">
                                <%= error.message %>
                            </div>
                        </article>
                        <% } %>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Post title" name="title">
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Image URL" name="image">
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Description" name="description">
                            </div>
                            <div class="form__input">
                                <input type="text" class="input" placeholder="Tags" name="tags">
                            </div>
                            <div>
                                <button class="button ">Submit New Post</button>
                            </div>

                </form>
            </div>


    </body>

</html>