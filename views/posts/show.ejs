<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>
<script type="text/javascript" src="/controllers/postcontrollers.js" defer></script>

    <body>
        <%- include('../partials/_navbar') %>
            <img class="poster_show" width=450px src="<%= post.image %>" alt="Placeholder image" />
           <div> <a href = "/users/<%= post.user._id %>"> Username: <%= post.user.username %> </a> </div>
           <div>Post Title: <%= post.title %></div>
           <div>Description: <%= post.description %></div>
                    <div class="comment_form">
                        <form action="../comments" method="POST">
                            <input class="input" type="text" name="content" placeholder="Leave a comment!" />
                            <input type="hidden" name="post" value="<%= post._id %>" />
                            <div>
                                <button class="button ">Submit New Comment</button>
                            </div>
                        </form>

                    </div>
                    <div class="comments">
                        <% comments.forEach(comment=> { %>
                            <div class="comment">
                                <%= comment.user.username  %> Says <%= comment.content %>
                            </div>
                            <% }) %>
                    </div>
                    <% if ( typeof user !=='undefined' && post.user._id == user.id) { %> 
                    <div class="buttons">
                        <a class="button" href="/gallery/<%= post.id %>/edit">Edit Post</a>
                    </div>
                    <form action="/gallery/<%= post.id %>?_method=DELETE" method="POST">
                        <input class="button" type="submit" value="Delete Post" />
                    </form>
                    <% } %> 
    </body>

</html>