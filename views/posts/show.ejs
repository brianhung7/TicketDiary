<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>

    <body>
        <%- include('../partials/_navbar') %>
            <img class="poster_show" width=450px src="<%= post.image %>" alt="Placeholder image" />
            <%= post.title %>
                <%= post.description %>
                    <div class="comment_form">
                        <form action="../comments" method="POST">
                            <input class="input" type="text" name="content" placeholder="Leave a comment!" />
                            <input type="hidden" name="post" value="<%= post._id %>" />
                            <div>
                                <button class="button ">Submit New Comment</button>
                            </div>
                        </form>

                    </div>
                    <div class="comments">
                        <% comments.forEach(comment=> { %>
                            <div class="comment">
                                <%= comment.content %>
                            </div>
                            <% }) %>
                    </div>

                    <div class="buttons">
                        <a class="button" href="/gallery/<%= post.id %>/edit">Edit Post</a>
                    </div>
                    <form action="/gallery/<%= post.id %>?_method=DELETE" method="POST">
                        <input class="button" type="submit" value="Delete Post" />
                    </form>
    </body>

</html>